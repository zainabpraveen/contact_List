<html>
    <head>
        <title>
            <%=title%>
        </title>
        <script src="https://kit.fontawesome.com/e53dfcfd7d.js" crossorigin="anonymous"></script>
        <!-- our css should be below all other style so that we can overridde it -->
     <link rel="stylesheet" href="/CSS/home.css">
    </head>
    <body>
        <h1 id="page-heading">
            <i class="fas fa-address-book"></i>
             My Contact List</h1>
        <div id="contact-list-container">
            <ul>
                <% for(let i of contact_list){%> 
                    <li id="list">
                    <div class="details">
                        <p><%=i.name%></p>
                        <p><%=i.phone%></p>
                    </div>

             <div class="delete-button">
                <a href="/delete-contact/?id=<%=i._id%>">
                 <i class="fas fa-window-close"></i> 
                </a>
            </div>
                 </li>
                <%}%>
            </ul>
        </div>

    <form action="/create-contact" method="POST" id="frm"> 

    <input type="text" name="name"  class="input-box" placeholder="Enter Name" required>
    <input type="number" name="phone"  class="input-box" placeholder="Enter phone" required>
    <button  id="btn" type ="submit">Add </button>
    </form> 
    <script type="text/javascript" src="/js/home.js"></script>
    </body>
</htm>